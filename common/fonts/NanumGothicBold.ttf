<!-- 404페이지 에러핸들러-->

<script type="text/javascript">
    var url = document.location.href;
    var name = 'ko-kr.iope.com';
    var uri = '/kr/ko/fonts/NanumGothicBold.ttf'

    if( url.indexOf("iope.com") != -1 ) {
        if( uri.indexOf("/kr/ko") != -1) {
			location.href="/kr/ko/error.html";
        } else if( uri.indexOf("/cn/zh") != -1) {
			location.href="/cn/zh/error.html";
        } else if( uri.indexOf("/tw/zh") != -1) {
			location.href="/tw/zh/error.html";
        } else if( uri.indexOf("/int/en") != -1) {
			location.href="/int/en/error.html";
        } else {
			location.href="/int/en/error.html";
        }
    } else if(url.indexOf("sulwhasoo.com")!=-1){
        if(name == 'www.sulwhasoo.co.kr'){			
            location.href="/kr/ko/misc/error.html";
        }else if(name == 'www.sulwhasoo.com.cn'){
            location.href="/cn/zh/misc/error.html";
        }else if(name == 'international.sulwhasoo.com'){
            location.href="/int/en/misc/error.html";
        }else if ( name == 'en-sg.sulwhasoo.com'){
            location.href="/sg/en/misc/error.html";
        }else if (name == 'en-my.sulwhasoo.com'){
            location.href="/my/en/misc/error.html";
        }else if (name == 'en-hk.sulwhasoo.com'){
            location.href="/hk/en/misc/error.html";
        }else if (name == 'zh-hk.sulwhasoo.com'){
            location.href="/hk/zh/misc/error.html";
        }
    } else if(url.indexOf("hera.com")!=-1) {
        if(url.indexOf("hera.com/kr/ko")!=-1) {
            location.href="/kr/ko/error.html";
        } else if(url.indexOf("hera.com/kr/en")!=-1) {
            location.href="/kr/en/error.html";
        } else if(url.indexOf("hera.com/kr/zh")!=-1) {
            location.href="/kr/zh/error.html";
        } else if(url.indexOf("hera.com/cn/zh")!=-1) {
            location.href="/cn/zh/error.html";
        }
    } else {
        location.href="http://www.amorepacific.com/error/404.html";
    }
</script>
